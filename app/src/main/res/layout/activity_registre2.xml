<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/v915_wit_003_e_1_1"
        android:gravity="center"
        android:orientation="vertical"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="283dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/leonilogo" />


    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="511dp"
            android:layout_gravity="center_horizontal"
            android:background="#FEFEFE"
            android:orientation="vertical"
            android:padding="24dp">
            <EditText
                android:id="@+id/username2"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_perm_identity_24"
                android:hint="Identifiant"
                android:inputType="textPersonName"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />
            <EditText
                android:id="@+id/name"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:hint="Nom"
                android:inputType="textPersonName"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />

            <EditText
                android:id="@+id/matricule"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:hint="Matricule"
                android:inputType="number"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:hint="@string/email"
                android:inputType="textWebEmailAddress"
                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:hint="Mot de passe"
                android:inputType="textPassword"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/registre1"
                android:layout_width="237dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#0080B8"
                android:text="CrÃ©er un compte"
                android:textColor="#FAFEFE"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/seconnecter"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:text="Se connecter"
                android:textColor="#656666"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
