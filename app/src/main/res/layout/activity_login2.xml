<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v915_wit_003_e_1_1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivit">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="331dp"
        android:layout_height="196dp"
        app:srcCompat="@drawable/leonilogo" />
    <androidx.cardview.widget.CardView
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="326dp"
            android:layout_gravity="center_horizontal"
            android:background="#FEFEFE"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/username2"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_perm_identity_24"
                android:hint="Identifiant"
                android:inputType="textPersonName"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="337dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:hint="Mot de passe"
                android:inputType="textPassword"

                android:textColorHint="#656666"
                android:textSize="17sp"
                android:textStyle="normal|bold|italic" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginBtn"
                android:layout_width="268dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#0080B8"
                android:text="Se connecter"
                android:textColor="#FAFEFE"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/creercompte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="30dp"
                android:text="CrÃ©er un compte"
                android:textColor="#656666"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>